{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "target": "es2016",
    "module": "commonjs",
    "types": [
      "node",
      "jasmine"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es2016"
    ]
  },
  "exclude": [
    "../node_modules"
  ]
}
