{
    "name": "angular-electron",
    "version": "2.6.0",
    "description": "Angular 5 with Electron (Typescript + SASS + Hot Reload)",
    "homepage": "https://github.com/maximegris/angular-electron",
    "author": {
        "name": "Michael Gardner",
        "email": "mikejr83@gmail.com"
    },
    "contributors": [
        "Maime GRIS <maxime.gris@gmail.com>"
    ],
    "keywords": [
        "angular",
        "angular 5",
        "electron",
        "typescript",
        "sass"
    ],
    "main": "main.js",
    "private": true,
    "scripts": {
        "createPDF": "node ./support/create-pdf.js",
        "docs": "npm-run-all typedoc createPDF",
        "postdocs": "rimraf .tmp",

        "typedoc": "typedoc --name \"ngType Tester\" --readme ./.tmp/README-TOC.md --target ES6 --exclude \"**/node_modules/**\" --module commonjs --out docs ./",
        "typedoc:min": "typedoc --theme node_modules/typedoc-default-themes/bin/minimal --name \"ngType Tester\" --readme ./.tmp/README-TOC.md --target ES6 --exclude \"**/node_modules/**\" --out docs ./",
        "ng": "ng",
        "lint": "ng lint",

        "webpack:watch": "webpack --watch",

        "build": "webpack --display-error-details && npm run build:electron:main",

        "build:electron:main": "tsc main.ts --outDir dist --sourceMap true -t ES2016 -m commonjs --lib es6,dom && copyfiles package.json dist && cd dist && npm install --prod && cd ..",
        "build:prod": "cross-env NODE_ENV=production npm run build",
        "build:web": "tsc server/main.ts --outDir dist/web --sourceMap true -t ES2016 -m commonjs --lib es6,dom && copyfiles package.json dist/web && cd dist/web && npm install --prod && cd ../..",

        "build-readme": "node ./support/concat-readme.js",
        "build-support": "tsc -p support/",

        "e2e": "protractor ./protractor.conf.js",

        "electron:serve": "npm run build:electron:main && electron ./dist --serve",
        "electron:test": "electron ./dist",
        "electron:dev": "npm run build && electron ./dist",
        "electron:prod": "npm run build:prod && electron ./dist",
        "electron:linux": "npm run build:prod && npx electron-builder build --linux",
        "electron:windows": "npm run build:prod && npx electron-builder build --windows",
        "electron:mac": "npm run build:prod && npx electron-builder build --mac",

        "prebuild-readme": "npm run build-support",
        "prebuild-support": "rimraf support/*.js",
        "prebuild:web": "rimraf dist/web/server dist/web/electron",

        "predocs": "npm-run-all build-readme build-support",
        "pree2e": "webdriver-manager update --standalone false --gecko false --quiet && npm run build",
        "pretypedoc": "rimraf docs",
        "preweb": "npm-run-all build:web",

        "start": "npm-run-all --parallel webpack:watch electron:serve",
        "start:web": "webpack-dev-server --content-base . --port 4200 --inline",

        "test": "karma start ./karma.conf.js",

        "web": "npm-run-all --parallel webpack:watch web:serve",
        "web:serve": "node ./dist/web/server/main.js"
    },
